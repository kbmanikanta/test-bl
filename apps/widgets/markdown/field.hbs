
<div class="bl-widget bl-init" style="margin-bottom:25px;" data-type="markdown" data-key="{{config.key}}">
	<label for="{{safename config.name}}_\{{safename @root._id}}" style="font-size:.9rem; position:relative; top:3px;">{{config.fieldLabel}}</label>

	<div class="z-depth-1">
	<textarea id="{{safename config.name}}_\{{safename @root._id}}" rows="3" name="{{config.name}}" class="validate" style="background-color:#eee;padding-left:5px;height:auto;">\{{  {{config.hbsValidName}} }}</textarea>
	</div>

	\{{#if "{{quote config.fieldDescription}}" }}
		<span class="field-description bl-textfield" style="top:0;">{{config.fieldDescription}}</span>
	\{{/if}}
</div>

