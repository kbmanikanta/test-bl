
<div class="bl-widget input-field bl-init" data-type="reference"  data-key="{{config.key}}">
	<div>
		<input value="\{{  {{config.hbsValidName}} }}" id="{{safename config.name}}_\{{safename @root._id}}" name="{{config.name}}" type="text" class="validate" style="background-color:#eee;padding-left:5px;">
		<label for="{{safename config.name}}_\{{safename @root._id}}">{{config.fieldLabel}}</label>
		\{{#if "{{quote config.fieldDescription}}" }}
			<span class="field-description bl-textfield">{{config.fieldDescription}}</span>
		\{{/if}}
	</div>
</div>

