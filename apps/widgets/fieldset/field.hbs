


<div style="border:1px solid #e0e0e0; background-color:#fff; margin-bottom:32px;margin-top:16px;{{#ifop config.title "||" config.label}}padding-top:0;{{/ifop}}" class="fieldset section">

	{{#ifop config.title "||" config.label}}
		<div style="width:calc(100% + 4px); margin-left:-2px; background-color:#448aff; color:white; border:1px solid #e0e0e0; padding:5px; position:relative; top:-1px; left:0; margin-bottom:0px;"><i class="fa fa-chevron-circle-up"></i>&nbsp; {{first-of config.title config.label}} </div>
	{{/ifop}}

	<div style="padding-left:24px;padding-right:32px;">
		{{#if config.description}}
			<div style="color:#5074b1;padding:0px; margin:8px; padding-top:8px; padding-bottom:4px;">{{{config.description}}}</div>
		{{else}}
			<div style="height:8px;"></div>
		{{/if}}


		<ul style="margin-top:0">
		{{#each config.items}}			
			<div data-widget-name="{{key}}" class="form-row {{widget}} {{#if lockAllowed}} \{{#if @root.bl:lock-mode}}lock_mode\{{/if}} {{/if}}">
				{{#if lockAllowed}}
					\{{#if @root.bl:lock-mode}}
						<i class="row-lock material-icons \{{#ifnot "{{key}}" "in" @root.bl:local  }}locked\{{/ifnot}}">lock\{{#ifop "{{key}}" "in" @root.bl:local  }}_open\{{/ifop}}</i>
					\{{/if}}
				{{/if}}
				<li>{{get-template .}}</li>
			</div>
		{{/each}}
		</ul>
	</div>
</div>
