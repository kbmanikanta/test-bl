

<div style="border:1px solid #e0e0e0; background-color:#fff; margin-bottom:10px;{{#if config.title}}margin-top:30px;{{/if}}padding:10px;" class="fieldset section ">
	{{#ifop config.title "||" config.label}}
		<span style="background-color:#eee; border:1px solid #e0e0e0; padding:5px; position:relative; top:-20px; left:0;" class="red-text text-darken-4">{{first-of config.title config.label}} </span>
	{{/ifop}}

	<table class="highlight bordered"><tbody>
	{{#each config.items}}
		<tr class="{{widget}}" data-name="{{name}}"><td>{{fieldLabel}}</td><td>{{get-template . "content"}}</td></tr>
	{{/each}}
	</tbody>
	</table>
</div>
