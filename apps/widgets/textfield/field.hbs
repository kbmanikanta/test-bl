
<div class="bl-widget input-field" data-type="textfield" data-key="{{config.key}}">
	<input value="\{{  {{config.hbsValidName}} }}" id="{{safename config.name}}_\{{safename @root._id}}" name="{{config.name}}" type="text" class="validate" style="background-color:#eee;padding-left:5px;" {{#if config.disabled}}disabled{{/if}} {{#if config.readonly}}readonly{{/if}}>
	<label for="{{safename config.name}}_\{{safename @root._id}}">{{config.fieldLabel}}</label>
	\{{#if "{{quote config.fieldDescription}}" }}
		<span class="field-description bl-textfield">{{config.fieldDescription}}</span>
	\{{/if}}
</div>

