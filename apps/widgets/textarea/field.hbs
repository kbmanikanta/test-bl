
<div class="bl-widget input-field" data-type="textarea" data-key="{{config.key}}">
	<textarea id="{{safename config.name}}_\{{safename @root._id}}" rows="3" name="{{config.name}}" class="validate" style="background-color:#eee;padding-left:5px;height:auto;" {{#if config.disabled}}disabled{{/if}} >\{{  {{config.hbsValidName}} }}</textarea>
	<label for="{{safename config.name}}_\{{safename @root._id}}">{{config.fieldLabel}}</label>
	\{{#if "{{quote config.fieldDescription}}" }}
		<span class="field-description bl-textfield" style="top:-8px;">{{config.fieldDescription}}</span>
	\{{/if}}
</div>

